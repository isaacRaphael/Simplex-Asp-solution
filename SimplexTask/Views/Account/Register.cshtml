@model SimplexTask.Models.ViewModels.UserRegistrationViewModel

<script>
        document.addEventListener("DOMContentLoaded", () => {
            const label = document.querySelector(".custom-file-label")
            const input = document.querySelector(".custom-file-input")

            input.addEventListener("change", () => {
                var fileName = input.value.split("\\").pop();
                label.innerText = fileName;
            })

        })


</script>

<section class="mt-5">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/img/register.png"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form enctype="multipart/form-data" method="post" asp-action="Register" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="w-100 d-flex justify-content-center align-items-center mb-2">
                        <i class="lni lni-users text-danger mx-2 font-weight-bold"></i>
                        <h4 class="text-danger">Register To Simplex Books</h4>
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">First Name <span class="text-danger">*</span></label>
                        <input asp-for="Firstname" type="text" class="form-control form-control-lg" autocomplete="off" readonly onfocus="this.removeAttribute('readonly');" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Last Name <span class="text-danger">*</span></label>
                        <input asp-for="Lastname" type="text" class="form-control form-control-lg" autocomplete="off" readonly onfocus="this.removeAttribute('readonly');" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>

                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Email address <span class="text-danger">*</span></label>
                        <input asp-for="Email" type="email" id="form1Example13" class="form-control form-control-lg" autocomplete="off" readonly onfocus="this.removeAttribute('readonly');" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example23">Password <span class="text-danger">*</span></label>
                        <input asp-for="Password" type="password" id="form1Example23" class="form-control form-control-lg" autocomplete="off" readonly onfocus="this.removeAttribute('readonly');" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-danger btn-lg btn-block">Sign Up</button>



                    <div class="d-flex justify-content-around align-items-center mt-4">
                        <div>Already a user ? <a asp-action="Login">Login </a></div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }
</style>
@model SimplexTask.Models.ViewModels.NewBookViewModel


<h2 class="text-danger ml-2">Add New Book</h2>
<div class="w-100 d-flex justify-content-between align-items-center">
    <form asp-action="Newbook" method="post" class="w-50 gy-2 gx-3  mt-4">
        <div class="col-auto">
            <div class="form-outline">
                <label class="form-label" for="form11Example1">Book Title</label>
                <input asp-for="BookTitle" type="text" id="form11Example1" class="form-control" />
                <span asp-validation-for="BookTitle"></span>
            </div>
        </div>
        <input asp-for="UserEmail" type="text" readonly hidden value=@ViewBag.User.Email />
        <div class="col-auto mt-2">
            <label class="visually-hidden" for="inlineFormSelectPref">Rating</label>
            <select asp-for="Rating" class="custom-select">
                <option value=""></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Rating"></span>
        </div>
        <div class="col-auto mt-2">
            <div class="form-outline">
                <label class="form-label" for="form11Example3">Author Name</label>
                <input asp-for="Author" type="text" id="form11Example3" class="form-control" />
                <span asp-validation-for="Author"></span>
            </div>
        </div>

        <div class="col-auto">
            <button type="submit" class="btn btn-danger btn-block mt-4">Submit</button>
        </div>
    </form>
    <div class="w-50">
        <img class="w-75" src="~/img/book.png" alt="Alternate Text" />
    </div>
</div>
